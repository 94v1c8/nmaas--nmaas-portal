{
  "label": "Terms acceptance",
  "hideLabel": true,
  "tableView": true,
  "type": "container",
  "input": true,
  "tab": 0,
  "key": "termsAcceptance",
  "display": "form",
  "components": [
    {
      "label": "Terms",
      "autoExpand": false,
      "spellcheck": false,
