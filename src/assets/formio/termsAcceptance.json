      "input": true,
      "defaultValue": "@TERMS_CONTENT"
    },
    {
      "label": "Accept Terms",
      "placeholder": "Yes",
      "tableView": true,
      "persistent": false,
      "validate": {
        "required": true,
        "pattern": "(yes)|(YES)|(Yes)",
